	$(CXX) -o sha512t256sum sha512.o sha512t256sum.o $(LIBS) $(CXXFLAGS)


md5sum.o: md5sum.cpp
	$(CXX) -c md5sum.cpp $(INCLUDES) $(LIBS) $(CXXFLAGS)

md5sum: md5.o md5sum.o
	$(CXX) -o $@ $^ $(LIBS) $(CXXFLAGS)

md5sum_debug: md5.cpp md5sum.cpp
	$(CXX) -g -O0 -c md5.cpp $(INCLUDES) $(LIBS) $(CXXFLAGS)
